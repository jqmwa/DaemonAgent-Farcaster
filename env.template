# DaemonFetch Environment Configuration Template
# Copy this file to .env.local and fill in your actual API keys

# Neynar API Configuration
# Get these from https://neynar.com/
NEYNAR_API_KEY=your_neynar_api_key_here
NEYNAR_SIGNER_UUID=your_neynar_signer_uuid_here

# Claude API Configuration (Required for Jung-style analysis)
# Get this from https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here

# DeepSeek API Configuration
# Get this from https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Bot Configuration
# Get your bot's FID from Neynar or Farcaster
BOT_FID=1368064

# Emergency brake to stop all responses (set to "true" to activate)
EMERGENCY_STOP=false

# Optional: OpenAI API Key (for other endpoints that still use OpenAI)
# Get this from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# Database Configuration
# ============================================================================

# MySQL Database URL
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://root:password@localhost:3306/daemonfetch"

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl_rand_base64_32

# ============================================================================
# ElizaOS Farcaster Plugin Configuration
# ============================================================================

# Farcaster Configuration for ElizaOS
# These use the same Neynar credentials as above
FARCASTER_FID=1368064
FARCASTER_NEYNAR_API_KEY=your_neynar_api_key_here
FARCASTER_SIGNER_UUID=your_neynar_signer_uuid_here

# Farcaster Mode: 'polling' or 'webhook'
# Use 'webhook' for real-time processing (recommended for production)
# Use 'polling' for development/testing
FARCASTER_MODE=webhook

# Optional ElizaOS Settings
FARCASTER_DRY_RUN=false
MAX_CAST_LENGTH=320
FARCASTER_POLL_INTERVAL=2
ENABLE_CAST=true
CAST_INTERVAL_MIN=90
CAST_INTERVAL_MAX=180
ENABLE_ACTION_PROCESSING=false
ACTION_INTERVAL=5
CAST_IMMEDIATELY=false
MAX_ACTIONS_PROCESSING=1
ACTION_TIMELINE_TYPE=ForYou
